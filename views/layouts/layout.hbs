      <script>
          (function(){
              const actualizarBadgeNovedades = async () => {
                  try {
                      const r = await fetch('/novedades/pendientes', { headers: { 'Accept': 'application/json' }, cache: 'no-store', credentials: 'same-origin' });
                      if (!r.ok) return;
                      const d = await r.json();
                      const cant = Number(d.cantidad)||0;
                      const bNov = document.getElementById('badge-novedades-mobile');
                      if (bNov) { if (cant>0){ bNov.textContent = cant>99?'99+':String(cant); bNov.classList.remove('d-none'); } else { bNov.classList.add('d-none'); } }
                  } catch(e) { /* noop */ }
              };
              if (document.readyState === 'loading') { document.addEventListener('DOMContentLoaded', actualizarBadgeNovedades); } else { actualizarBadgeNovedades(); }
              setInterval(actualizarBadgeNovedades, 60000);
          })();
      </script>
