{{#if Confirmar}}
<script>
    Swal.fire({
        title: '{{Confirmar.title}}',
        text: '{{Confirmar.text}}',
        icon: '{{Confirmar.icon}}',
        showCancelButton: true,
        confirmButtonText: 'Aceptar',
        cancelButtonText: 'Cancelar'
    }).then((result) => {
        if (result.isConfirmed) {
            // Usamos JSON.stringify via helper para evitar que Handlebars escape & como &amp;
            window.location.href = {{{json Confirmar.Ok}}};
        }
    });    
    </script>
{{/if}}

