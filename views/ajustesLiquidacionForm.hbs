<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-4">
      <div class="card shadow-sm">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
      <span class="fw-bold">{{#if esNuevo}}Nuevo Ajuste{{else}}Editar Ajuste{{/if}}</span>
      <a href="/ajustesLiquidacion" class="btn btn-outline-secondary btn-sm" title="Volver" aria-label="Volver">
        <i class="bi-arrow-left"></i>
      </a>
    </div>
    <form method="post" action="{{#if esNuevo}}/ajustesLiquidacion/nuevo{{else}}/ajustesLiquidacion/editar/{{ajuste.Id}}{{/if}}">
      <div class="card-body">
        {{#if Mensaje}}
          <div class="alert alert-{{Mensaje.icon}} mb-3">{{Mensaje.text}}</div>
        {{/if}}
        <div class="mb-3">
          <label for="IdEmpleado" class="form-label">Empleado</label>
          <select id="IdEmpleado" name="IdEmpleado" class="form-select" required>
            <option value="">-- Seleccionar --</option>
            {{#each empleados}}
              <option value="{{this.Id}}" {{#ifeq this.Id ../ajuste.IdEmpleado}}selected{{/ifeq}}>{{this.ApellidoYNombre}}</option>
            {{/each}}
          </select>
        </div>
        <div class="mb-3">
          <label for="Descripcion" class="form-label">Descripci√≥n</label>
          <textarea id="Descripcion" name="Descripcion" class="form-control" rows="3" required>{{ajuste.Descripcion}}</textarea>
        </div>
        <div class="row">
          <div class="col-6 mb-3">
            <label for="Monto" class="form-label">Monto</label>
            <input type="number" step="0.01" id="Monto" name="Monto" value="{{ajuste.Monto}}" class="form-control" required>
            <div class="form-text small" style="font-size: .725rem;">Puede ser positivo o negativo, distinto de 0.</div>
          </div>
        </div>
      </div>
      <div class="card-footer d-flex justify-content-start align-items-center gap-2">
        <button type="submit" class="btn btn-primary"><i class="bi-save me-1"></i>Guardar</button>
        <button type="reset" class="btn btn-outline-secondary"><i class="bi-eraser me-1"></i>Limpiar</button>
      </div>
    </form>
      </div>
    </div>
  </div>
</div>
