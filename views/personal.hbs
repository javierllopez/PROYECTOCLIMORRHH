<div class="d-flex w-auto">
    <div class="row flex-fill m-2">
        <div class="col flex-fill ">
            <div class="d-flex flex-row justify-content-between p-2">
                <div class="d-flex flex-col">
                    <div class="h1">Personal</div>
                </div>
                <div class="d-flex flex-col">
                    <div class="container p-2">
                        <a href="/personal/agregar" class="btn btn-primary rounded-circle me-2"> <i
                                class="bi-plus h3"></i> </a>
                        <a href="/personal/importar" class="btn btn-success rounded-circle ms-2" title="Importar desde Excel">
                            <i class="bi bi-upload h3"></i>
                        </a>
                    </div>
                </div>
            </div>
            <div class="d-flex flex-row p-2">
                <table class="table table-bordered table-striped">
                    <thead>
                        {{{encabezadoHTML}}}
                    </thead>

                    <tbody>
                        {{#each tabla}}
                        <tr>
                            <td>{{this.legajo}}</td>
                            <td>{{this.ApellidoYNombre}}</td>
                            <td>{{this.sector}}</td>
                            <td>{{this.categoria}}</td>
                            <td>{{this.turno}}</td>
                            <td>{{#ifeq this.nivel 3}} Usuario {{/ifeq}}
                                {{#ifeq this.nivel 2}} Supervisor {{/ifeq}}
                                {{#ifeq this.nivel 1}} Administrador {{/ifeq}}
                            </td>
                            <td class="text-center">
                                {{#if @root.permiteEditar}}
                                <a type="button" class="btn btn-primary rounded-circle" href="/personal/editar/{{this.Id}}" data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="Editar datos del colaborador">
                                    <i class="bi-pencil-fill"></i> 
                                </a>
                                {{/if}}
                                {{#if @root.permiteBorrar}}
                                <a type="button" class="btn btn-danger rounded-circle"
                                    href="/personal/baja/{{this.Id}}" data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="Dar de baja">
                                    <i class="bi-trash-fill"></i> </a>
                                {{/if}}
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
    {{{paginador}}}




    {{{funciones}}}