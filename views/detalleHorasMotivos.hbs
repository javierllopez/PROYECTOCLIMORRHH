<div class="container my-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h4>
      Detalle de horas por motivo
      {{#if periodoActual}}
        <small class="text-muted">— Período: {{Periodo periodoActual}}</small>
      {{/if}}
    </h4>
    <a href="/" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Volver</a>
  </div>

  {{#if detalle.length}}
  <div class="card">
    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table table-striped table-hover mb-0">
          <thead class="table-light">
            <tr>
              <th>Motivo</th>
              <th class="text-end">Horas al 50</th>
              <th class="text-end">Horas al 100</th>
              <th class="text-end">Total Horas</th>
              <th class="text-end">Monto</th>
            </tr>
          </thead>
          <tbody>
            {{#each detalle}}
            <tr>
              <td>{{Motivo}}</td>
              <td class="text-end">{{minutosAHoras Min50}}</td>
              <td class="text-end">{{minutosAHoras Min100}}</td>
              <td class="text-end">{{minutosAHoras (add Min50 Min100)}}</td>
              <td class="text-end">{{formatoMoneda Monto}}</td>
            </tr>
            {{/each}}
          </tbody>
          <tfoot>
            <tr class="fw-bold">
              <td>Total general</td>
              <td class="text-end">{{minutosAHoras total.min50}}</td>
              <td class="text-end">{{minutosAHoras total.min100}}</td>
              <td class="text-end">{{minutosAHoras (add total.min50 total.min100)}}</td>
              <td class="text-end">{{formatoMoneda total.monto}}</td>
            </tr>
          </tfoot>
        </table>
      </div>
    </div>
  </div>
  {{else}}
  <div class="alert alert-secondary" role="alert">
    No hay datos para mostrar.
  </div>
  {{/if}}
</div>
