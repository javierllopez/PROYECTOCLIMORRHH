<script>
    (function() {
        const actualizarBadges = async () => {
            try {
                const resp = await fetch('/autorizarHoras/pendientes', { headers: { 'Accept': 'application/json' }, cache: 'no-store', credentials: 'same-origin' });
                if (!resp.ok) return;
                const data = await resp.json();
                const cantidad = Number(data.cantidad) || 0;

                const badgeDesktop = document.getElementById('badge-autorizar-horas-desktop');
                const badgeMobile = document.getElementById('badge-autorizar-horas-mobile');
                const badgeNovDesk = document.getElementById('badge-novedades-desktop');
                const badgeNovMob = document.getElementById('badge-novedades-mobile');

                const toggleBadge = (badge) => {
                    if (!badge) return;
                    if (cantidad > 0) {
                        badge.textContent = cantidad > 99 ? '99+' : String(cantidad);
                        badge.classList.remove('d-none');
                        badge.classList.add('d-inline-flex');
                    } else {
                        badge.classList.add('d-none');
                        badge.classList.remove('d-inline-flex');
                    }
                };

                        toggleBadge(badgeDesktop);
                        toggleBadge(badgeMobile);

                        // Actualizar conteo de novedades propias con estado 2 o 4
                        try {
                            const resp2 = await fetch('/novedades/pendientes', { headers: { 'Accept': 'application/json' }, cache: 'no-store', credentials: 'same-origin' });
                            if (resp2.ok) {
                                const data2 = await resp2.json();
                                const cantidad2 = Number(data2.cantidad) || 0;
                                const toggleBadgeVal = (badge) => {
                                    if (!badge) return;
                                    if (cantidad2 > 0) {
                                        badge.textContent = cantidad2 > 99 ? '99+' : String(cantidad2);
                                        badge.classList.remove('d-none');
                                        badge.classList.add('d-inline-flex');
                                    } else {
                                        badge.classList.add('d-none');
                                        badge.classList.remove('d-inline-flex');
                                    }
                                };
                                toggleBadgeVal(badgeNovDesk);
                                toggleBadgeVal(badgeNovMob);
                            }
                        } catch (e) { /* noop */ }
            } catch (e) {
                // Silenciar errores de red para no molestar al usuario
            }
        };

        // Primera carga y luego cada 60 segundos
        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', actualizarBadges);
        } else {
            actualizarBadges();
        }
            setInterval(actualizarBadges, 60000);
    })();
</script>