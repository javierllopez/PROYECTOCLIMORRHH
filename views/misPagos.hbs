<div class="container mt-3">
  <div class="card shadow-sm">
    <div class="card-header bg-primary text-white d-flex align-items-center justify-content-between">
      <span><i class="bi-receipt me-2"></i> Mis Pagos</span>
      <span class="small">Ordenados por período (desc)</span>
    </div>
    <div class="card-body p-0">
      {{#if pagos}}
      <div class="d-none d-md-block">
        <div class="table-responsive">
          <table class="table table-sm mb-0 align-middle">
            <thead class="table-light">
              <tr>
                <th style="width: 20%">Período</th>
                <th>Detalle</th>
                <th class="text-end" style="width: 15%">Monto</th>
                <th class="text-end" style="width: 15%">Nro. de Vale</th>
              </tr>
            </thead>
            <tbody>
              {{#each pagos}}
              <tr>
                <td>{{Periodo this.Periodo}}</td>
                <td class="text-break">{{this.Detalle}}</td>
                <td class="text-end">{{formatoMoneda this.Monto}}</td>
                <td class="text-end">{{formatoNumero this.Vale}}</td>
              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>

      <div class="d-block d-md-none">
        <div class="table-responsive">
          <table class="table table-sm mb-0 align-middle">
            <thead class="table-light">
              <tr>
                <th>Período</th>
                <th>Detalle</th>
                <th class="text-end">Monto</th>
                <th class="text-end">N° Vale</th>
              </tr>
            </thead>
            <tbody>
              {{#each pagos}}
              <tr>
                <td class="align-top" style="min-width:72px;">{{this.PeriodoMMYY}}</td>
                <td class="text-break">{{this.Detalle}}</td>
                <td class="text-end align-top">{{formatoMoneda this.Monto}}</td>
                <td class="text-end align-top">{{formatoNumero this.Vale}}</td>
              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
      {{else}}
        <div class="p-3 text-muted">No hay pagos para mostrar.</div>
      {{/if}}
    </div>
  </div>
</div>
