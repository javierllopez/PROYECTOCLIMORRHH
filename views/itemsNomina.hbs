<div class="d-flex w-auto row flex-fill mx-2">
    <div class="row flex-row justify-content-between my-2">
        <div class="col flex-col">
            <div class="h1">Items de Nómina</div>
        </div>
        <div class="col flex-col text-end">
            <div class="container">
                <a href="/itemsNomina/editar" class="btn btn-primary rounded-circle"> <i class="bi-plus h3"></i>
                </a>
            </div>
        </div>
    </div>
    <div class="row flex-row">
        <table class="table table-bordered table-striped">
            <thead>
                {{{encabezadoHTML}}}
            </thead>

            <tbody>
                {{#each tabla}}
                <tr>
                    <td>{{this.Id}}</td>
                    <td>{{this.Descripcion}}</td>
                    <td>{{#if this.InformaValorSueldoBasico}}Sí{{else}}No{{/if}}
                    </td>
                    <td>{{#if this.HaceGuardiasDiurnas}}Sí{{else}}No{{/if}}</td>
                    <td>{{#if this.HaceGuardiasNocturnas}}Sí{{else}}No{{/if}}</td>
                    <td>{{#if this.HaceGuardiasPasivas}}Sí{{else}}No{{/if}}</td>
                    <td>{{#if this.TieneAdicionalMensual}}Sí{{else}}No{{/if}}</td>
                    <td class="text-center">
                        {{#if @root.permiteEditar}}
                        <a type="button" class="btn btn-primary rounded-circle" href="/itemsNomina/editar/{{this.Id}}">
                            <i class="bi-pencil-fill"></i> </a>
                        {{/if}}
                        {{#if @root.permiteBorrar}}
                        <a type="button" class="btn btn-danger rounded-circle" href="/itemsNomina/borrar/{{this.id}}">
                            <i class="bi-trash-fill"></i> </a>
                        {{/if}}
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>
<div class="paginador-container" data-tabla="itemsNomina" data-ruta="/itemsNomina">
    {{{paginador}}}
</div>


