<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h4 class="mb-0">Ajustes de Liquidación</h4>
    <a href="/ajustesLiquidacion/nuevo" class="btn btn-primary rounded-circle d-flex justify-content-center align-items-center" style="width:48px;height:48px;" title="Nuevo ajuste" aria-label="Nuevo ajuste">
      <i class="bi-plus-lg fs-4"></i>
    </a>
  </div>
  {{#if Mensaje}}
    <div class="alert alert-{{Mensaje.icon}}">{{Mensaje.text}}</div>
  {{/if}}
  <div class="card">
    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table table-sm table-striped align-middle mb-0">
          <thead class="table-light">
            <tr>
              <th style="width:20%">Empleado</th>
              <th>Descripción</th>
              <th style="width:10%" class="text-end">Monto</th>
              <th style="width:14%">Fecha</th>
              <th style="width:12%" class="text-end">Acciones</th>
            </tr>
          </thead>
          <tbody>
            {{#if ajustes.length}}
              {{#each ajustes}}
                <tr>
                  <td>{{this.ApellidoYNombre}}</td>
                  <td>{{this.Descripcion}}</td>
                  <td class="text-end">{{formatoMoneda this.Monto}}</td>
                  <td>{{FechaYHora this.TimeStamp}}</td>
                  <td class="text-end d-flex justify-content-end gap-2">
                    <a href="/ajustesLiquidacion/editar/{{this.Id}}" class="btn btn-outline-secondary rounded-circle d-flex justify-content-center align-items-center" style="width:36px;height:36px;" title="Editar" aria-label="Editar">
                      <i class="bi-pencil"></i>
                    </a>
                    <form action="/ajustesLiquidacion/eliminar/{{this.Id}}" method="post" class="d-inline" onsubmit="return confirm('¿Eliminar ajuste?');">
                      <button class="btn btn-outline-danger rounded-circle d-flex justify-content-center align-items-center" style="width:36px;height:36px;" title="Eliminar" aria-label="Eliminar">
                        <i class="bi-trash"></i>
                      </button>
                    </form>
                  </td>
                </tr>
              {{/each}}
            {{else}}
              <tr><td colspan="5" class="text-center text-muted">No hay ajustes cargados.</td></tr>
            {{/if}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="mt-3">
    <a href="/" class="btn btn-secondary">Volver</a>
  </div>
</div>
